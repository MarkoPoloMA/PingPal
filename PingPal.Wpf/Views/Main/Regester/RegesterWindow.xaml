<controls:MetroWindow x:Class="PingPal.Wpf.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPal.Wpf.Views.Main"
		xmlns:models="clr-namespace:PingPal.Wpf.Models"
		xmlns:wpf="clr-namespace:PingPal.Wpf" xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" 
                      mc:Ignorable="d"
		FontSize="20"
		Title="{Binding Header, Mode=OneWay}"
		Width="400"
		SizeToContent="Height">

	<!--<Window.Resources>
		<wpf:DemoModel x:Key="DemoModel" />
	</Window.Resources>-->

    <Grid Height="318">
       
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1E3C72" Offset="0"/>
                <GradientStop Color="#FF2A5298" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        
        <Grid Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Регистрация" 
                       Grid.Row="0"
                       FontSize="20"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBox x:Name="NameTextBox" 
                     Grid.Row="1"
                     Margin="0,0,0,10"
                     Padding="5"
                     Background="#FFF"
                     BorderBrush="#AAA"
                     Text="Имя"/>

            <TextBox x:Name="LoginTextBox" 
                     Grid.Row="2"
                     Margin="0,0,0,10"
                     Padding="5"
                     Background="#FFF"
                     BorderBrush="#AAA"
                     Text="Логин"/>

            <PasswordBox x:Name="PasswordBox" 
                         Grid.Row="3"
                         Margin="0,0,0,10"
                         Padding="5"
                         Background="#FFF"
                         BorderBrush="#AAA"
                         Password="Пароль"/>

            <PasswordBox x:Name="ConfirmPasswordBox" 
                         Grid.Row="4"
                         Margin="0,0,0,20"
                         Padding="5"
                         Background="#FFF"
                         BorderBrush="#AAA"
                         Password="Подтвердите пароль"/>

            <Button x:Name="RegisterButton" 
                    Grid.Row="5"
                    Content="Зарегистрироваться"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Padding="10,5"
                    FontWeight="Bold"
                    Click="RegisterButton_Click"/>
        </Grid>
    </Grid>
</controls:MetroWindow>
